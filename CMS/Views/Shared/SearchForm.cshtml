                <label>Sân bay đi</label>
                <input id="flight-from" class="form-control medium-down--three-twelfths" placeholder="Thành phố, sân bay đi" type="text" onClick="this.setSelectionRange(0, this.value.length); return false;" />
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group form-group-lg form-group-icon-left">
